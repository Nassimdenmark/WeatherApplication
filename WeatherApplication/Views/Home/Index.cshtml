@model WeatherApplication.Models.WeatherModel

@{
    ViewBag.Title = "Weatherfi";
}

<div class="jumbotron">
    <h1>@Model.Name</h1>
    <p class="lead">Weather forecast for @Model.Name</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Weather</h2>
        <p>
            @Model.Weather[0].Main
        </p>
        <p>
            @Model.Weather[0].Description
        </p>
    </div>
</div>